<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="codelur.ciuapp.Programs"
    android:clickable="true"
    android:background="#6ab0ce">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/programsInfo"
        android:id="@+id/textView19"
        android:textStyle="bold"
        android:layout_marginBottom="5dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView6"
        android:layout_below="@+id/textView19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f5fd77">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RLPrograms"
            android:padding="15dp"
            android:layout_below="@+id/textView19"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:background="@drawable/undergraduate"
                android:layout_marginTop="23dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Bachelor&apos;s Degree   "
                android:id="@+id/button"
                android:layout_marginBottom="48dp"
                android:background="@drawable/border_yellow_button"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignRight="@+id/imageView3"
                android:layout_alignEnd="@+id/imageView3"
                android:onClick="buttonBachProgramOnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Master&apos;s Degree  "
                android:id="@+id/button5"
                android:layout_below="@+id/imageView3"
                android:layout_alignRight="@+id/imageView3"
                android:layout_alignEnd="@+id/imageView3"
                android:layout_marginTop="87dp"
                android:background="@drawable/border_yellow_button"
                android:layout_alignLeft="@+id/button"
                android:layout_alignStart="@+id/button"
                android:onClick="buttonMasterProgramOnClick" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:background="@drawable/graduate"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
