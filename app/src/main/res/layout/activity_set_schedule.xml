<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="codelur.ciuapp.SetSchedule"
    android:background="#6ab0ce">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/classesLayout"
            android:background="#f5fd77">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/BachelorLaoyout"
                android:layout_margin="4dp"
                android:background="#f5fd77">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACHELORS"
                    android:id="@+id/textBach"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add this class"
                    android:id="@+id/radioButtonBachelor"
                    android:layout_gravity="right" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linearLayout4"
                    android:weightSum="1"
                    android:clickable="false"
                    android:dividerPadding="@dimen/activity_vertical_margin"
                    android:background="#c3bdbd"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Day"
                        android:id="@+id/textView10"
                        android:layout_below="@+id/textView6"
                        android:layout_toLeftOf="@+id/spinnerDayBach"
                        android:layout_toStartOf="@+id/spinnerDayBach"
                        android:layout_marginLeft="4dp" />

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="33dp"
                        android:id="@+id/spinnerDayBach"
                        android:layout_below="@+id/textView10"
                        android:entries="@array/spinnerDaysArray"
                        android:layout_toLeftOf="@+id/buttonCancel"
                        android:layout_toRightOf="@+id/buttonAccept"
                        android:layout_toEndOf="@+id/buttonAccept" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linearLayout5"
                    android:background="#c3bdbd"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:id="@+id/textView14"
                        android:layout_below="@+id/textView6"
                        android:layout_toLeftOf="@+id/spinnerTimeBach"
                        android:layout_toStartOf="@+id/spinnerTimeBach"
                        android:layout_marginLeft="4dp" />

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="33dp"
                        android:id="@+id/spinnerTimeBach"
                        android:layout_below="@+id/textView14"
                        android:entries="@array/spinnerTimeArray"
                        android:layout_toLeftOf="@+id/buttonCancel"
                        android:layout_toRightOf="@+id/buttonAccept"
                        android:layout_toEndOf="@+id/buttonAccept" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:layout_gravity="right" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="#c3bdbd"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Class"
                        android:id="@+id/textView16"
                        android:layout_below="@+id/textView6"
                        android:layout_toLeftOf="@+id/spinnerClassBach"
                        android:layout_toStartOf="@+id/spinnerClassBach"
                        android:layout_marginLeft="4dp" />

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:id="@+id/spinnerClassBach"
                        android:layout_below="@+id/textView16"
                        android:layout_toLeftOf="@+id/buttonCancel"
                        android:layout_toRightOf="@+id/buttonAccept"
                        android:layout_toEndOf="@+id/buttonAccept" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#feffd080"
                android:weightSum="1"
                android:layout_below="@+id/BachelorLaoyout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="4dp"
                android:id="@+id/MasterLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MASTERS"
                    android:id="@+id/textView15"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add this class"
                    android:id="@+id/radioButtonMaster"
                    android:layout_gravity="right" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linearLayout"
                    android:weightSum="1"
                    android:clickable="false"
                    android:dividerPadding="@dimen/activity_vertical_margin"
                    android:background="#c3bdbd"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Day"
                        android:id="@+id/textView7"
                        android:layout_below="@+id/textView6"
                        android:layout_toLeftOf="@+id/spinnerDayMaster"
                        android:layout_toStartOf="@+id/spinnerDayMaster"
                        android:layout_marginLeft="4dp" />

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="33dp"
                        android:id="@+id/spinnerDayMaster"
                        android:entries="@array/spinnerDaysArray"
                        android:layout_toLeftOf="@+id/buttonCancel"
                        android:layout_toRightOf="@+id/buttonAccept"
                        android:layout_toEndOf="@+id/buttonAccept" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linearLayout2"
                    android:background="#c3bdbd"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:id="@+id/textView8"
                        android:layout_below="@+id/textView6"
                        android:layout_toLeftOf="@+id/spinnerTimeMaster"
                        android:layout_toStartOf="@+id/spinnerTimeMaster"
                        android:layout_marginLeft="4dp" />

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="33dp"
                        android:id="@+id/spinnerTimeMaster"
                        android:layout_below="@+id/textView8"
                        android:entries="@array/spinnerTimeArray"
                        android:layout_toLeftOf="@+id/buttonCancel"
                        android:layout_toRightOf="@+id/buttonAccept"
                        android:layout_toEndOf="@+id/buttonAccept" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="#c3bdbd"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Class"
                        android:id="@+id/textView9"
                        android:layout_below="@+id/textView6"
                        android:layout_toLeftOf="@+id/spinnerClassMasters"
                        android:layout_toStartOf="@+id/spinnerClassMasters"
                        android:layout_marginLeft="4dp" />

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:id="@+id/spinnerClassMasters"
                        android:layout_below="@+id/textView9"
                        android:layout_toLeftOf="@+id/buttonCancel"
                        android:layout_toRightOf="@+id/buttonAccept"
                        android:layout_toEndOf="@+id/buttonAccept"
                        android:touchscreenBlocksFocus="false" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonAccept"
        android:id="@+id/buttonCancel"
        android:onClick="buttonAcceptScheduleOnClick"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/scrollView3"
        android:layout_alignEnd="@+id/scrollView3"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/border_yellow_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonCancel"
        android:id="@+id/buttonAccept"
        android:onClick="buttonCancelScheduleOnClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_yellow_button"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

</RelativeLayout>
